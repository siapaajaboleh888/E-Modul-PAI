<!-- Header dengan Gradient -->
<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold mb-0"
            style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;">
            ðŸ“š <%= module.title %>
        </h2>
        <a href="/lecturer/modules" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Kembali ke Modul
        </a>
    </div>
    <p class="text-muted mb-0">
        <%= module.description || 'Kelola unit pembelajaran dalam modul ini.' %>
    </p>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0 fw-bold">ðŸ“– Unit Pembelajaran</h5>
    </div>
    <div class="card-body">
        <% if (units && units.length) { %>
            <div class="list-group list-group-flush">
                <% units.forEach(function(u) { %>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 fw-bold">
                                <%= u.title %>
                            </h6>
                            <p class="mb-0 text-muted small">
                                <%= u.description || '-' %>
                            </p>
                        </div>
                        <a href="/lecturer/units/<%= u.id %>" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye"></i> Lihat
                        </a>
                    </div>
                    <% }) %>
            </div>
            <% } else { %>
                <div class="alert alert-info mb-0">
                    <i class="bi bi-info-circle"></i> Belum ada unit untuk modul ini.
                </div>
                <% } %>
    </div>
</div>