<!-- Header dengan Gradient -->
<div class="mb-4">
    <h2 class="fw-bold mb-2"
        style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;">
        üìù Manajemen Materi
    </h2>
    <p class="text-muted">Kelola semua materi pembelajaran dari berbagai unit</p>
</div>

<!-- Filter dan Search -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <input type="text" id="searchMaterial" class="form-control" placeholder="üîç Cari judul materi...">
            </div>
            <div class="col-md-4 text-end">
                <a href="/admin/modules" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Kembali ke Modul
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Daftar Materi -->
<% if (materials && materials.length> 0) { %>
    <div class="row g-3">
        <% materials.forEach((material, index)=> { %>
            <div class="col-md-6 material-item">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="p-2 rounded me-3"
                                style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                                <i class="bi bi-file-earmark-text text-white fs-4"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-1">
                                    <%= material.title %>
                                </h5>
                                <small class="text-muted">
                                    <i class="bi bi-book"></i>
                                    <%= material.module_title %> ‚Ä∫ <%= material.unit_title %>
                                </small>
                            </div>
                        </div>

                        <% if (material.content) { %>
                            <p class="text-muted small mb-2">
                                <%= material.content.length> 150 ? material.content.substring(0, 150) + '...' :
                                    material.content %>
                            </p>
                            <% } %>

                                <% if (material.media_type) { %>
                                    <div class="mb-2">
                                        <span class="badge bg-info">
                                            <i class="bi bi-camera-video"></i>
                                            <%= material.media_type %>
                                        </span>
                                    </div>
                                    <% } %>

                                        <div class="d-flex justify-content-between align-items-center mt-3">
                                            <small class="text-muted">
                                                <i class="bi bi-calendar"></i>
                                                <%= new Date(material.created_at).toLocaleDateString('id-ID') %>
                                            </small>
                                            <div>
                                                <a href="/admin/units/<%= material.unit_id %>/materials/<%= material.id %>/edit"
                                                    class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                            </div>
                                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
    <% } else { %>
        <div class="text-center py-5">
            <div class="p-4 rounded-circle bg-light d-inline-flex mb-3">
                <i class="bi bi-file-earmark-text text-muted" style="font-size: 3rem;"></i>
            </div>
            <p class="text-muted">Belum ada materi yang tersedia.</p>
            <a href="/admin/modules" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Tambah Materi Baru
            </a>
        </div>
        <% } %>

            <style>
                .hover-lift {
                    transition: transform 0.3s ease, box-shadow 0.3s ease;
                }

                .hover-lift:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
                }
            </style>

            <script>
                // Search functionality
                document.getElementById('searchMaterial').addEventListener('input', function (e) {
                    const searchTerm = e.target.value.toLowerCase();
                    const materials = document.querySelectorAll('.material-item');

                    materials.forEach(material => {
                        const text = material.textContent.toLowerCase();
                        if (text.includes(searchTerm)) {
                            material.style.display = '';
                        } else {
                            material.style.display = 'none';
                        }
                    });
                });
            </script>