<h2 class="mb-3">Modul: <%= module.title %></h2>
<p class="text-muted"><%= module.description || '-' %></p>

<h5 class="mt-4">Unit Pembelajaran</h5>
<ul class="list-group">
  <% if (units && units.length) { %>
    <% units.forEach(function(u) { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= u.title %></strong><br />
          <span class="text-muted small"><%= u.description || '-' %></span>
        </div>
        <a href="/student/units/<%= u.id %>" class="btn btn-sm btn-outline-primary">Lihat Materi</a>
      </li>
    <% }) %>
  <% } else { %>
    <li class="list-group-item text-muted">Belum ada unit untuk modul ini.</li>
  <% } %>
</ul>
