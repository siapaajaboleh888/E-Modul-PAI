<!-- Header -->
<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="fw-bold">Detail Mahasiswa</h2>
        <a href="/lecturer/users" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>
</div>

<!-- Info Mahasiswa -->
<div class="row g-4">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0 fw-bold">ðŸ“‹ Informasi Mahasiswa</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th style="width: 200px;">Nama Lengkap</th>
                        <td>
                            <%= user.name %>
                        </td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>
                            <%= user.email %>
                        </td>
                    </tr>
                    <tr>
                        <th>Institusi</th>
                        <td>
                            <%= user.institution || '-' %>
                        </td>
                    </tr>
                    <tr>
                        <th>Semester</th>
                        <td>
                            <%= user.semester || '-' %>
                        </td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            <span class="badge <%= user.status==='ACTIVE' ? 'bg-success' : 'bg-secondary' %>">
                                <%= user.status %>
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <th>Bergabung</th>
                        <td>
                            <%= user.created_at ? new Date(user.created_at).toLocaleDateString('id-ID', {
                                weekday: 'long' , year: 'numeric' , month: 'long' , day: 'numeric' }) : '-' %>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body text-white text-center">
                <div class="mb-3">
                    <% if (user.profile_photo) { %>
                        <img src="<%= user.profile_photo %>" alt="Profile Photo" class="rounded-circle"
                            style="width: 100px; height: 100px; object-fit: cover; border: 4px solid white;">
                        <% } else { %>
                            <div class="rounded-circle bg-white d-inline-flex align-items-center justify-content-center"
                                style="width: 100px; height: 100px; border: 4px solid white;">
                                <i class="bi bi-person-circle" style="font-size: 3.5rem; color: #667eea;"></i>
                            </div>
                            <% } %>
                </div>
                <h5 class="mb-1">
                    <%= user.name %>
                </h5>
                <p class="mb-0 small">
                    <%= user.email %>
                </p>
            </div>
        </div>

        <div class="card border-0 shadow-sm mt-3">
            <div class="card-body text-center">
                <a href="/lecturer/reports/student/<%= user.id %>" class="btn btn-primary w-100">
                    <i class="bi bi-graph-up"></i> Lihat Progres
                </a>
            </div>
        </div>
    </div>
</div>