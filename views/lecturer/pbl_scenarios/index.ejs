<!-- Header dengan Gradient -->
<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold mb-0"
            style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;">
            ðŸŽ¯ Skenario Problem-Based Learning
        </h2>
        <a href="/lecturer/dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Kembali ke Dashboard
        </a>
    </div>
    <p class="text-muted mb-0">
        Kelola skenario PBL untuk pembelajaran berbasis masalah.
    </p>
</div>

<div class="mb-3">
    <a href="/lecturer/pbl-scenarios/new" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Tambah Skenario Baru
    </a>
</div>

<div class="row g-3">
    <% if (scenarios && scenarios.length) { %>
        <% scenarios.forEach(function(s) { %>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">
                            <%= s.title %>
                        </h5>
                        <p class="card-text text-muted small">
                            <%= s.description ? s.description.substring(0, 100) + '...' : 'Tidak ada deskripsi' %>
                        </p>
                        <div class="mt-auto">
                            <a href="/lecturer/pbl-scenarios/<%= s.id %>/edit" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
                <% } else { %>
                    <div class="col-12">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Belum ada skenario PBL. Klik "Tambah Skenario Baru" untuk
                            membuat.
                        </div>
                    </div>
                    <% } %>
</div>