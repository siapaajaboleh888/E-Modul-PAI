<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>‚≠ê Edit Nilai Transformatif</h2>
        <a href="/admin/transformative-values" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>

    <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

            <div class="card">
                <div class="card-body">
                    <form method="POST" action="/admin/transformative-values/<%= value.id %>?_method=PUT">
                        <div class="mb-3">
                            <label for="value_name" class="form-label">Nama Nilai *</label>
                            <input type="text" class="form-control" id="value_name" name="value_name"
                                value="<%= value.value_name %>" required>
                            <div class="form-text">Contoh: Toleransi Beragama, Moderasi Beragama</div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Deskripsi *</label>
                            <textarea class="form-control" id="description" name="description" rows="3"
                                required><%= value.description || '' %></textarea>
                            <div class="form-text">Jelaskan makna dari nilai transformatif ini</div>
                        </div>

                        <div class="mb-3">
                            <label for="indicators" class="form-label">Indikator *</label>
                            <textarea class="form-control" id="indicators" name="indicators" rows="4"
                                required><%= value.indicators || '' %></textarea>
                            <div class="form-text">Tuliskan indikator-indikator yang dapat diukur, pisahkan dengan koma
                                atau baris baru</div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Update Nilai Transformatif
                            </button>
                            <a href="/admin/transformative-values" class="btn btn-secondary">
                                <i class="bi bi-x"></i> Batal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
</div>