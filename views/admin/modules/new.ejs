<h2 class="mb-3">Tambah Modul Baru</h2>
<form method="POST" action="/admin/modules">
  <div class="mb-3">
    <label class="form-label">Judul Modul</label>
    <input type="text" name="title" class="form-control" required />
  </div>
  <div class="mb-3">
    <label class="form-label">Deskripsi</label>
    <textarea name="description" class="form-control" rows="3"></textarea>
  </div>
  <div class="mb-3">
    <label class="form-label">Capaian Pembelajaran (Learning Outcomes)</label>
    <textarea name="learning_outcomes" class="form-control" rows="3"></textarea>
  </div>
  <div class="mb-3">
    <label class="form-label">Urutan (opsional)</label>
    <input type="number" name="ordering" class="form-control" />
  </div>
  <button type="submit" class="btn btn-primary">Simpan</button>
  <a href="/admin/modules" class="btn btn-secondary">Batal</a>
</form>
